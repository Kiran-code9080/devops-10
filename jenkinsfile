pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18' // Make sure NodeJS 18 is installed/configured in Jenkins
    }

    environment {
        TEST_RESULTS = 'test-results' // Folder for Jest JUnit XML reports
    }

    stages {
        // Stage 1: Install dependencies
        stage('Install Dependencies') {
            steps {
                echo 'Installing Node.js dependencies...'
                sh 'npm install'
            }
        }

        // Stage 2: Build (optional for Node.js, can include compilation or lint)
        stage('Build') {
            steps {
                echo 'Build stage (optional for Node.js)'
                // For example, you can add build scripts here
                // sh 'npm run build'
            }
        }

        // Stage 3: Run Unit Tests
        stage('Unit Tests') {
            steps {
                echo 'Running Jest unit tests...'
                sh "mkdir -p ${TEST_RESULTS}" // Ensure folder exists
                sh 'npm test'
            }
            post {
                always {
                    // Publish JUnit test results to Jenkins
                    junit "${TEST_RESULTS}/junit.xml"
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests succeeded!'
        }
        failure {
            echo '❌ Build or tests failed!'
        }
    }
}
